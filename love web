      <div class="proposal">
        <img src="data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='100' height='100' viewBox='0 0 24 24'><path fill='%23ff6b9a' d='M12 21s-7-4.35-9-7.5C1.5 9.75 4 6 7.5 6 9.6 6 12 8 12 8s2.4-2 4.5-2C20 6 22.5 9.75 21 13.5 19 16.65 12 21 12 21z'/></svg>" style="width:100px;height:100px;margin-bottom:12px"/>
        <div style="font-size:15px;color:#6b495a">Do you say <strong>Yes</strong> or <strong>No</strong>?</div>
        <div class="choices">
          <div id="arrow" class="arrow-to-yes" style="display:none">‚¨áÔ∏è</div>
          <button class="btn btn-yes" id="yesBtn">Yes ‚ù§Ô∏è‚Äçüî•</button>
          <button class="btn btn-no" id="noBtn">No üòø</button>
        </div>
        <div id="result" class="result"></div>
      </div>
    </div>
  </div>
  <canvas id="confetti"></canvas>
  <script>
    const noBtn = document.getElementById('noBtn');
    const yesBtn = document.getElementById('yesBtn');
    const result = document.getElementById('result');
    const arrow = document.getElementById('arrow');
    let noClicks = 0;
    let continuousMoveInterval = null;

    yesBtn.addEventListener('click', ()=>{
      result.textContent = 'YAY! üíï I choose you too!';
      yesBtn.disabled = true; noBtn.disabled = true;
      arrow.style.display = 'none';
      sprinkleConfetti();
      showCelebration();
    });

    noBtn.addEventListener('click', ()=>{
      noClicks++;
      alert('üò≠ Please say Yes!');
      if(noClicks>=6 && noClicks<=8){
        startContinuousMovement();
        arrow.style.display = 'block';
      } else {
        moveNoButtonNearYes();
      }
      if(noClicks === 5){
        triggerAngryAnimation();
      }
      result.textContent = "Aww... üòø That's okay. I still think you're amazing.";
    });

    function moveNoButtonNearYes(){
      const yesRect = yesBtn.getBoundingClientRect();
      const btn = noBtn;
      const offsetX = (Math.random() * 120) - 60; 
      const offsetY = (Math.random() * 80) - 40;
      btn.style.position = 'fixed';
      btn.style.left = yesRect.left + offsetX + 'px';
      btn.style.top = yesRect.top + offsetY + 'px';
    }

    function startContinuousMovement(){
      if(continuousMoveInterval) return;
      continuousMoveInterval = setInterval(()=>{
        moveNoButtonNearYes();
      },500);
    }

    function triggerAngryAnimation(){
      noBtn.classList.add('btn-angry');
      setTimeout(()=> noBtn.classList.remove('btn-angry'), 1200);
    }

    function showCelebration(){
      const celebration = document.createElement('div');
      celebration.className = 'celebration';
      celebration.textContent = 'üéâ You made me so happy! üéâ';
      document.body.appendChild(celebration);
      setTimeout(()=>celebration.remove(),2500);
    }

    function sprinkleConfetti(){
      const canvas = document.getElementById('confetti');
      const ctx = canvas.getContext('2d');
      let W = canvas.width = innerWidth;
      let H = canvas.height = innerHeight;
      window.addEventListener('resize', ()=>{W=canvas.width=innerWidth;H=canvas.height=innerHeight});
      const pieces = [];
      const colors = ['#ff6b9a','#ffd1e8','#ffcf7b','#ff9ac2','#ffd6e8'];
      for(let i=0;i<200;i++){
        pieces.push({x:W/2,y:H/2,vx:Math.random()*14-7,vy:Math.random()*-14,size:Math.random()*8+6,color:colors[Math.floor(Math.random()*colors.length)],rot:Math.random()*360,vr:Math.random()*10-5});
      }
      let t=0;
      function frame(){
        ctx.clearRect(0,0,W,H);
        for(let p of pieces){
          p.x += p.vx; p.y += p.vy; p.vy += 0.25; p.rot += p.vr;
          ctx.save(); ctx.translate(p.x,p.y); ctx.rotate(p.rot*Math.PI/180);
          ctx.fillStyle = p.color; ctx.fillRect(-p.size/2,-p.size/2,p.size,p.size*0.6);
          ctx.restore();
        }
        t++;
        if(t<220) requestAnimationFrame(frame);
      }
      frame();
    }
  </script>
